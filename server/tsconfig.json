{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/ts/*"
            ]
        },
        "baseUrl": "./src",
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ]
}